<h1 class="pl-4">New game</h1>
<ul class="d-flex justify-content-between list-unstyled col-3">
<% @letters.each do |letter| %>
    <li class="bg-info rounded px-2 font=15px"><%= letter.capitalize %></li>
  <% end %>
</ul>

<form action="/score" method="post" data-turbo="false">
  <label for="long-word" class="col-12 pb-3">What is the longest word you can find?</label>
  <input type="text" id="long-word" name="word" placeholder="What is your word?">
  <input type="submit" value="play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
